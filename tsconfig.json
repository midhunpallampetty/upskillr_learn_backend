{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node", "chai", "chai-http", "mocha"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "noEmitOnError": false,   // âœ… allow emitting JS even if there are type errors
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "test/**/*"]
}
